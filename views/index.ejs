    <style>
      *{
        box-sizing: border-box;
        margin:0;
        padding:0;
      }

      html{
        scroll-behavior: smooth;
      }

      body{
        position: relative;
        font-family: Gotham, sans-serif;
        background: linear-gradient(178.45deg, rgba(255, 255, 255, 0) -38.18%, #09386E 263.94%), #FFFFFF;
        line-height: 1.5;
        height: 100vh;
        width: 100%;
      }

      /* NAVIGATION BAR */
      .nav-container{
        height: 145px;
      }

      .wrapper{
        max-width: 1336px;
        margin: auto;
      }

      .navbar{
        top: 0;
        z-index: 1;
        display: flex;
        width: 100%;
        height: 140px;
        align-items: center;
        justify-content: space-between;
      }

      .navbar ul{
        display: flex;
        list-style: none;
        margin-block-start: 1em;
        margin-block-end: 1em;
        margin-inline-start: 20px;
        margin-inline-end: 40px;
        padding-inline-start: 40px;
        max-height: 40px;
      }

      .navbar .logo{
        justify-content: center;
        width: 107px;
        height: 107px;
        margin-left: 10px;
        margin-right: 10px;
      }

      .nav-items-1 li {
        list-style: none;
        text-align: center;
        margin-left: 20px;
        margin-right: 20px;
      }

      .nav-items-2 li{
        list-style: none;
        text-align: center;
        margin-left: 20px;
        margin-right: 20px;
      }

      .nav-items-1 li a{
        font-size: 17px;
        color: #092F5A;
        text-decoration: none;
      }

      .nav-items-2 li a{
        font-size: 17px;
        color: #092F5A;
        text-decoration: none
      }

      .nav-items-2 li a.btn{
          border-radius: 44px;
        }

      a.btn{
        background: #F6C75D;
        padding: 15px 22px;
        filter: drop-shadow(3px 4px 4px rgba(0, 0, 0, 0.25));
        transition: 300ms;
      }

      .nav-items-1 li a:hover{
        color: white;
      }

      .nav-items-2 li a:hover{
        color: white;
      }

      a.btn:hover{
        transform: translateY(-8px);
      }


      /*SECTIONS*/
      .container{
        width: 100%
        height: 100%
        overflow-y: scroll;
        scroll-behavior: smooth;
      }

      section#home{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        width: 100%;
      }

      section#about{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        width: 100%;
        height: 100vh;
        background: linear-gradient(180deg, rgba(255, 255, 255, 0) -140.33%, #092F5A 172.96%), #FFFFFF;
      }

      section#courses{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        width: 100%;
